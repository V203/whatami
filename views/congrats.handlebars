<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="fadeInAnimation">
                    <h1>Congratulations!!!</h1>
                    <h2>You have completed this stage</h2>


                    <script>

                        const start = () => {
                            setTimeout(function () {
                                confetti.start()
                            }, 1000);
                        };

                        const stop = () => {
                            setTimeout(function () {
                                confetti.stop()
                            }, 5000);
                        };

                        start();
                        stop();
                    </script>

                    <img class="prizeImg{{imgNum}}" src="/prize.svg" alt="image of a bronze trophy">

                </div>
                <div class="row">
                    <div class="col-6">
                        <form action="/stageSelect/" method="get">
                            <button type="submit" class="btn btn-primary wide">Back</button>
                        </form>
                    </div>

                    <div class="col-6">
                        <form action="/stage{{nextStage}}/1">
                            <input type="submit" id="nextStage" value="Next Stage" class="btn btn-primary"
                                style="width: 100%;" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
    <script src="/confetti.js"></script>
</html>